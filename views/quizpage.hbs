<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <body>
    <div class="container-fluid text-center">
      <h1 style="margin:30px;">한국어 타자 시험</h1>

      <h3 style="font-size: 20vw;">{{word.Korean}}</h3>
      <h3 style="font-size: 5vw;">{{word.English}}</h3>
      
      <div style="margin:50px;" class="form-group" id="ans-form" >
        <input onkeydown="typingCounter()" autofocus class="form form-control-large" type="text" id="answer" name="ans" value="">
        <p id="keystrokes" name="" value=""></p>
        <button class="btn btn-danger-outline" onclick="passbackword()">OK</button>
      </div>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>
    let keystrokes = 0;

      function typingCounter()
      {
        let charCode = event.keyCode
        console.log(charCode)
        if(charCode == 13){ passbackword() }
        if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123) || charCode == 8 || charCode == 229){
        console.log(event.keyCode);
        keystrokes++;
        }
        document.getElementById('keystrokes').innerHTML = keystrokes;
      }
      //I know this doens't sound secure, but it's just passing the word back to the server
      function passbackword()
      {
        let data = []
        let reply = $("#answer").val()
        let keycount = $("#keystrokes").text()
        data.push(reply)
        data.push(keycount)
        console.log(data);
        $.ajax({
          method: 'POST',
          url: "/",
          data: {message : data},
          success: function(){
            console.log("success verbose ajax POST");
            location = "anscheck"
          }
        })
      }
    </script>
  </body>
</html>
